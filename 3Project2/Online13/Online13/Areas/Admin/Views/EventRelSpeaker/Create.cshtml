@model Online13.Models.EventRelSpeakers

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form method="post">

    <div class="form-horizontal">
        <h4>EventRelSpeakers</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    
        <div class="form-group">
            <div class="col-md-10">
                <label>Events</label>
                <select class="form-control" name="EventId">
                    <option value="value">Choose</option>
                    @foreach (var item in ViewBag.Events )
                    {
                        <option value="@item.Id">@item.Title</option>
                    }
                </select>
            </div>
        </div>

      
        <div class="form-group">
            <div class="col-md-10">
                <label>Speakers</label>
                <select class="form-control" name="SpeakerId">
                    <option value="value">Choose</option>
                    @foreach (var item in  ViewBag.Speakers)
                    {
                        <option value="@item.Id">@item.FullName</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
