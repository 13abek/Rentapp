@model IEnumerable<Online13.Models.Teacher>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-responsive" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeamLeader)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Development)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Design)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Innoation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Communication)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.skpe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PositionId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FullName)
    </td>
    <td>
        @*@Html.DisplayFor(modelItem => item.Image)*@
        <img src="~/Uploads/@item.Image" alt="Alternate Text" width="100" />
    </td>
    <td>
        @(item.Content.Length > 100 ? item.Content.Substring(0, 100) + "..." : item.Content)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.language)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TeamLeader)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Development)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Design)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Innoation)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Communication)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.mail)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Phone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.skpe)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PositionId)
    </td>
    <td>
        @Html.ActionLink("Edit", "Update", new { id = item.Id })
        @Html.ActionLink("Details", "Details", new { id = item.Id })
        <a href="@Url.Action("Delete","Teachers",new { id=item.Id})" onclick="return confirm('Are you sure?')">Delete</a>
    </td>
</tr>
}

</table>
