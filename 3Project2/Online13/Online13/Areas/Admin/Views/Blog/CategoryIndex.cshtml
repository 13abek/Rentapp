@model IEnumerable<Online13.Models.BlogCategory>

@{
    ViewBag.Title = "CategoryIndex";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>CategoryIndex</h2>

<p>
    @Html.ActionLink("Create New", "CategoryCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "CategoryUpdate", new { id = item.Id }) |
            <a href="@Url.Action("CategoryDelete","Blog", new { id = item.Id })" onclick="return confirm('Are you sure?')">Delete</a>

        </td>
    </tr>
}

</table>
