@model IEnumerable<Online13.Models.Blog>



@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ByAuthor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ViewCount)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.BlogCategory.Name)*@
            Category
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <img src="~/Uploads/@item.Image" alt="Alternate Text" width="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ByAuthor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedDate)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Content)*@
                @(item.Content.Length > 100 ? item.Content.Substring(0, 100) + "..." : item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ViewCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogCategory.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Update", new { id = item.Id }) |
                <a href="@Url.Action("Delete", "Blog", new { id = item.Id }) " onclick="return confirm('Are you sure?')">Delete</a>
            </td>
        </tr>
    }

</table>
