@model Online13.ViewModels.VmTeachers
@{
    ViewBag.Title = "Index";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>our teachers</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Teachers)
            {
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-teacher mb-45">
                        <div class="single-teacher-img">
                            <a href="@Url.Action("TeacherDetails","Teacher",new { id=item.Id})"><img src="~/Uploads/@item.Image" alt="teacher"></a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a href="@Url.Action("TeacherDetails","Teacher",new { id=item.Id})">@item.FullName</a></h2>
                            <h4>@item.Position.Name</h4>
                            <ul>
                                @foreach (var item2 in item.SocialTeachers)
                                {
                                    <li><a href="@item2.Link"><i class="@item2.Icon"></i></a></li>

                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Teacher End -->
<!-- Subscribe Start -->
@{
    Html.RenderPartial("~/Views/Shared/_SubscribePartial.cshtml");
}
<!-- Subscribe End -->