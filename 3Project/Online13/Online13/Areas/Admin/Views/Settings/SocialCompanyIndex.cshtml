@model IEnumerable<Online13.Models.SocialCompany>

@{
    ViewBag.Title = "SocialCompanyIndex";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>SocialCompanyIndex</h2>

<p>
    @Html.ActionLink("Create New", "SocialCompanyCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Icon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Link)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.SettingsId)*@
            Settings
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Icon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Link)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Setting.Id)
        </td>
        <td>
            @Html.ActionLink("Edit", "SocialCompanyUpdate", new { id = item.Id })
            <a href="@Url.Action("SocialCompanyDelete","Settings", new { id = item.Id })" onclick="return confirm('Are you sure?')">Delete</a>

        </td>
    </tr>
}

</table>
