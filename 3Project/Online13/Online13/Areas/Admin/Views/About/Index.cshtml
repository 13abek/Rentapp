@model IEnumerable<Online13.Models.About>

@{
    Layout =  "~/Areas/Admin/Views/Shared/_Layout.cshtml";;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideBgImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoticeTitle)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/Uploads/@item.Image" alt="@item.Image" width="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoLink)
            </td>
            <td>
                <img src="~/Uploads/@item.VideBgImage" alt="@item.VideBgImage" width="100"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoticeTitle)
            </td>
            <td>
                @Html.ActionLink("Edit", "Update", new { id = item.Id }) |
                <a href="@Url.Action("Delete","About", new { id = item.Id })" onclick="return confirm('Are you sure?')">Delete</a>

            </td>
        </tr>
    }
    
    </table>
</body>
</html>
