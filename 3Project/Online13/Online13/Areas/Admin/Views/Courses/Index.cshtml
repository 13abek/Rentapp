@model IEnumerable<Online13.Models.Course>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-responsive" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InputContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Starts)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassDuration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SkillLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Assesments)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.CourseCategoryId)*@
            Category
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Image)*@
            <img src="~/Uploads/@item.Image" alt="Alternate Text" width="100"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InputContent)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Content)*@
            @(item.Content.Length>100? item.Content.Substring(0,100):item.Content)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Starts.ToString("dd-MM-yy"))*@
            @item.Starts.ToString("dd-MM-yy")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClassDuration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SkillLevel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Language)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Assesments)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseCategory.Name)
            
        </td>
        <td>
            @Html.ActionLink("Edit", "Update", new { id=item.Id }) 
            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
            <a href="@Url.Action("Delete","Courses",new { id=item.Id})" onclick="return confirm('Are you sure?')">Delete</a>
        </td>
    </tr>
}

</table>
